#!/usr/bin/env sh

# Layout and behavior
yabai -m config layout bsp
yabai -m config window_placement second_child
yabai -m config split_ratio 0.50

# Padding and gaps (adjust to your preference)
yabai -m config top_padding    5
yabai -m config bottom_padding 5  
yabai -m config left_padding   5
yabai -m config right_padding  5
yabai -m config window_gap     5

# Mouse behavior (optional)
yabai -m config mouse_follows_focus off
yabai -m config focus_follows_mouse off

# Ignore these apps (they don't tile well)
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Finder$" manage=off

# Auto-focus when windows are closed or minimized
yabai -m signal --add event=window_destroyed active=yes action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"
yabai -m signal --add event=window_minimized active=yes action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

borders active_color=0xffe1e3e4 inactive_color=0xff494d64 width=5.0 &
