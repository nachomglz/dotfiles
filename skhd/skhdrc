.blacklist [
    "raycast"
]
# Terminal
cmd - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance

# Window movement (swap windows)
cmd - h : yabai -m window --warp west
cmd - l : yabai -m window --warp east  
cmd - j : yabai -m window --warp south
cmd - k : yabai -m window --warp north

# Window resizing
# Note: + and - keys need to be specified as 0x18 and 0x1B respectively
ctrl + alt - 0x18 : yabai -m window --resize right:20:0 || yabai -m window --resize left:20:0
ctrl + alt - 0x1B : yabai -m window --resize right:-20:0 || yabai -m window --resize left:-20:0
ctrl + alt - 0x18 : yabai -m window --resize top:0:-20 || yabai -m window --resize bottom:0:-20
ctrl + alt - 0x1B : yabai -m window --resize top:0:20 || yabai -m window --resize bottom:0:20
